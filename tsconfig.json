{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "@ms/configuration-environment": [
                "config/environment/environment.dev"
            ],
        },
        "sourceMap": true,
        "target": "es5",
        "types": [
            "vss-web-extension-sdk"
        ],
        "jsx": "react"
